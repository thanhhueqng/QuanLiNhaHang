                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ma"readonly="true" value="{{this.ma_mon}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Tên món</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ten"readonly="true" value="{{this.ten_mon}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Nội dung chi tiết</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ndct"readonly="true" value="{{this.noi_dung_chi_tiet}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Nội dung tóm tắt</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ndtt"readonly="true" value="{{this.noi_dung_tom_tat}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Đơn giá</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="gia"readonly="true" value="{{this.don_gia}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Đơn giá khuyến mãi</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="giakmai"readonly="true" value="{{this.don_gia_khuyen_mai}}">
                    </div>
                </div>
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Loại món ăn</label>
