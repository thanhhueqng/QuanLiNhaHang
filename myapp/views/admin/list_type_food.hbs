
<div class="w3l-table-info agile_info_shadow">
    <h3 class="w3_inner_tittle two" style="text-align: center;">Danh sách loại món ăn</h3>
    <table id="table" class="table table-border">
        <thead>
            <tr>
                <th>Mã loại</th>
                <th>Tên loại</th>
                <th>Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            {{#each result}}
            <tr>
                <td data-th="Name"><span class="bt-content">{{this.ma_loai}}</span></td>
                <td data-th="Age"><span class="bt-content">{{this.ten_loai}}</span></td>
                        <td data-th="Height"><span class="bt-content">
                                <a href="/admin/update_type_food/{{this.ma_loai}}"   class="btn btn-success btn-sm">Cập nhật</a>
                                <a onclick="return confirm('Bạn có muốn xóa hay không?')" href="/admin/delete_type_food/{{this.ma_loai}}"  class="btn btn-danger btn-sm">Xóa</a>
                    </span></td>
                
            </tr>
          {{/each}}
            
        </tbody>
    </table>
</div>